---
import Footer from "../components/Footer.astro";
import Navigation from "../components/Navigation.astro";
import TopBar from "../components/TopBar.astro";

const pageTitle =
  "Our Services | Edwards Landscape Group - Lawn Care & Landscaping in Lynchburg, VA";

const services = [
  {
    title: "Weekly mowing",
    description:
      "Consistent weekly mowing keeps your lawn neat, healthy, and professionally manicured all season long.",
    image: "/assets/Mowing_Service.jpg",
    alt: "Crew mowing a residential lawn in Lynchburg, Virginia",
    link: "/services/mowing.html",
    id: "weekly-mowing",
  },
  {
    title: "Fertilization & weed control",
    description:
      "Targeted fertilization and weed control programs build thick turf and reduce invasive growth.",
    image: "/assets/Fertilization_Service.png",
    alt: "Lawn care specialist applying fertilizer treatment to a green lawn",
    link: "/services/fertilization-weed-control.html",
    id: "fertilization-weed-control",
  },
  {
    title: "Aeration & seeding",
    description:
      "Core aeration and overseeding improve soil structure and support stronger, healthier roots.",
    image: "/assets/Aeration_Service.jpg",
    alt: "Aeration machine improving soil health on a residential lawn",
    link: "/services/aeration-seeding.html",
    id: "aeration-seeding",
  },
  {
    title: "Fall & winter clean up",
    description:
      "Seasonal cleanups remove leaves and debris to protect your landscape through colder months.",
    image: "/assets/FallCleanUp_Service.jpg",
    alt: "Landscaping crew clearing leaves from a landscaped property",
    link: "/services/fall-winter-cleanup.html",
    id: "fall-winter-cleanup",
  },
  {
    title: "Mulching",
    description:
      "Fresh mulch retains moisture, suppresses weeds, and delivers a polished look to your beds.",
    image: "/assets/Mulching_Service.jpg",
    alt: "Freshly mulched flower beds with clean edging",
    link: "/services/mulching.html",
    id: "mulching",
  },
  {
    title: "Bed maintenance",
    description:
      "Detailed edging, trimming, and weeding keep planting beds tidy and intentional.",
    image: "/assets/Bed_Service.jpg",
    alt: "Well-maintained flower beds with trimmed borders",
    link: "/services/bed-maintenance.html",
    id: "bed-maintenance",
  },
  {
    title: "Tree & shrub care",
    description:
      "Protect long-term plant health with pruning, treatments, and proactive pest management.",
    image: "/assets/ShrubCare_Service.jpg",
    alt: "Shrub care and pruning in a landscaped yard",
    link: "/services/tree-shrub-care.html",
    id: "tree-shrub-care",
  },
  {
    title: "Hardscaping",
    description:
      "Stonework, patios, and retaining walls add structure, function, and lasting value.",
    image: "/assets/Landscaping_Service.jpg",
    alt: "Stone patio and hardscape features in an outdoor living area",
    link: "/services/hardscaping.html",
    id: "hardscaping",
  },
  {
    title: "Landscape design",
    description:
      "Thoughtful landscape design creates cohesive outdoor spaces tailored to your lifestyle.",
    image: "/assets/Landscape_Design_Service.jpg",
    alt: "Professionally designed landscape with plantings and walkways",
    link: "/services/landscaping.html",
    id: "landscape-design",
  },
];
---

<head>
  <!-- Google tag (gtag.js) -->
  <script async src="https://www.googletagmanager.com/gtag/js?id=G-3TXVE0LR1X"></script>
  <script>
    (window as any).dataLayer = (window as any).dataLayer || [];
    (window as any).gtag = function () {
      (window as any).dataLayer.push(arguments);
    };
    (window as any).gtag("js", new Date());
    (window as any).gtag("config", "G-3TXVE0LR1X");
  </script>
  <title>{pageTitle}</title>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
  <meta
    name="description"
    content="Discover professional lawn care and landscaping services from Edwards Landscape Group. We offer mowing, mulching, aeration, fertilization, cleanups, and more for homes and businesses in Lynchburg and surrounding areas. Get a quote today!"
  />

  <link id="favicon" rel="icon" type="image/png" href="/assets/favicon.ico" />

  <link
    href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap"
    rel="stylesheet"
  />
  <link
    href="https://fonts.googleapis.com/css?family=Poppins:300,400,500,600,700,800,900"
    rel="stylesheet"
  />
  <link
    rel="stylesheet"
    href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css"
  />

  <link rel="stylesheet" href="/css/animate.css" />

  <link rel="stylesheet" href="/css/owl.carousel.min.css" />
  <link rel="stylesheet" href="/css/owl.theme.default.min.css" />
  <link rel="stylesheet" href="/css/magnific-popup.css" />

  <link rel="stylesheet" href="/css/ionicons.min.css" />

  <link rel="stylesheet" href="/css/flaticon.css" />
  <link rel="stylesheet" href="/css/icomoon.css" />
  <link rel="stylesheet" href="/css/style.css" />
</head>
<body>
  <TopBar />

  <Navigation />
  <section class="page-hero" style="background-image: url('/assets/bg_3.jpg');">
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-xl-6 hero-content-block">
          <h1 class="mb-3">Everything your lawn and landscape need</h1>
          <p class="mb-4">
            From routine mowing to full landscape design, we tailor maintenance and enhancements to
            fit your property, schedule, and budget.
          </p>
        </div>
      </div>
    </div>
  </section>

  <section class="section-padding services-page" id="services-list" aria-labelledby="services-list-heading">
    <div class="container">
      <div class="section-header text-center">
        <p class="eyebrow">Service options</p>
        <h2 id="services-list-heading">Lawn &amp; landscape services tailored to your property</h2>
        <p class="section-lead">
          Explore our full lineup of residential and commercial services designed to keep your
          landscape healthy, polished, and ready for every season.
        </p>
      </div>
      <div class="row services-page-grid">
        {services.map((service) => (
          <div class="col-md-6 col-lg-4 d-flex" key={service.id}>
            <a href={service.link} class="service-card-link" aria-label={`Learn more about ${service.title}`}>
              <article
                class="service-card service-card--image"
                id={service.id}
                itemscope
                itemtype="https://schema.org/Service"
              >
                <meta itemprop="url" content={service.link} />
                <div class="service-card__media">
                  <img src={service.image} alt={service.alt} loading="lazy" itemprop="image" />
                </div>
                <div class="service-card__body">
                  <h3 itemprop="name">{service.title}</h3>
                  <p itemprop="description">{service.description}</p>
                  <span class="arrow-link">
                    Learn more
                  </span>
                </div>
              </article>
            </a>
          </div>
        ))}
      </div>
    </div>
  </section>

  <Footer />

  <!-- loader -->
  <div id="ftco-loader" class="show fullscreen">
    <svg class="circular" width="48px" height="48px"
      ><circle class="path-bg" cx="24" cy="24" r="22" fill="none" stroke-width="4" stroke="#eeeeee"
      ></circle><circle
        class="path"
        cx="24"
        cy="24"
        r="22"
        fill="none"
        stroke-width="4"
        stroke-miterlimit="10"
        stroke="#F96D00"></circle></svg
    >
  </div>

  <script src="/js/jquery.min.js" is:inline></script>
  <script src="/js/jquery-migrate-3.0.1.min.js" is:inline></script>
  <script src="/js/popper.min.js" is:inline></script>
  <script src="/js/bootstrap.min.js" is:inline></script>
  <script src="/js/jquery.easing.1.3.js" is:inline></script>
  <script src="/js/jquery.waypoints.min.js" is:inline></script>
  <script src="/js/jquery.stellar.min.js" is:inline></script>
  <script src="/js/owl.carousel.min.js" is:inline></script>
  <script src="/js/jquery.magnific-popup.min.js" is:inline></script>
  <script src="/js/scrollax.min.js" is:inline></script>
  <script
    src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBVWaKrjvy3MaE7SQ74_uJiULgl1JY0H2s&sensor=false"
  ></script>
  <script src="/js/google-map.js" is:inline></script>
  <script src="/js/main.js" is:inline></script>

  <!-- Global site tag (gtag.js) - Google Analytics -->
  <script async src="https://www.googletagmanager.com/gtag/js?id=UA-23581568-13"></script>
  <script>
    (window as any).dataLayer = (window as any).dataLayer || [];
    function gtag(...args: any[]) {
      ((window as any).dataLayer as any[]).push(args);
    }
    gtag("js", new Date());

    gtag("config", "UA-23581568-13");
  </script>
</body>
