---
import Footer from "../components/Footer.astro";
import Navigation from "../components/Navigation.astro";
import TopBar from "../components/TopBar.astro";

const pageTitle =
  "Our Services | Edwards Landscape Group - Lawn Care & Landscaping in Lynchburg, VA";
---

<head>
  <!-- Google tag (gtag.js) -->
  <script async src="https://www.googletagmanager.com/gtag/js?id=G-3TXVE0LR1X"></script>
  <script>
    (window as any).dataLayer = (window as any).dataLayer || [];
    (window as any).gtag = function () {
      (window as any).dataLayer.push(arguments);
    };
    (window as any).gtag("js", new Date());
    (window as any).gtag("config", "G-3TXVE0LR1X");
  </script>
  <title>{pageTitle}</title>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
  <meta
    name="description"
    content="Discover professional lawn care and landscaping services from Edwards Landscape Group. We offer mowing, mulching, aeration, fertilization, cleanups, and more for homes and businesses in Lynchburg and surrounding areas. Get a quote today!"
  />

  <link id="favicon" rel="icon" type="image/png" href="/assets/favicon.ico" />

  <link
    href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap"
    rel="stylesheet"
  />
  <link
    href="https://fonts.googleapis.com/css?family=Poppins:300,400,500,600,700,800,900"
    rel="stylesheet"
  />
  <link
    rel="stylesheet"
    href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css"
  />

  <link rel="stylesheet" href="/css/animate.css" />

  <link rel="stylesheet" href="/css/owl.carousel.min.css" />
  <link rel="stylesheet" href="/css/owl.theme.default.min.css" />
  <link rel="stylesheet" href="/css/magnific-popup.css" />

  <link rel="stylesheet" href="/css/ionicons.min.css" />

  <link rel="stylesheet" href="/css/flaticon.css" />
  <link rel="stylesheet" href="/css/icomoon.css" />
  <link rel="stylesheet" href="/css/style.css" />
</head>
<body>
  <TopBar />

  <Navigation />
  <section class="page-hero" style="background-image: url('/assets/bg_3.jpg');">
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-xl-6 hero-content-block">
          <h1 class="mb-3">Everything your lawn and landscape need</h1>
          <p class="mb-4">
            From routine mowing to full landscape design, we tailor maintenance and enhancements to
            fit your property, schedule, and budget.
          </p>
        </div>
      </div>
    </div>
  </section>

  <section class="ftco-section ftco-no-pt" id="services-list">
    <div class="container" style="max-width: 2000px;">
      <div class="row" style="justify-content: center; text-align: center;">
        <div class="col-lg-9 services-wrap px-4 pt-5">
          <h2 class="mb-4" style="font-weight: 700;">Explore our services</h2>
          <div class="d-flex align-items-stretch" id="Weekly Mowing">
            <div class="ftco-animate" style="width: 100%; height: 300px; overflow: hidden;">
              <img
                src="/assets/Mowing_Service.jpg"
                alt="mowing"
                style="width: 100%; height: 100%; object-fit: cover; border-radius: 15px;"
              />
            </div>
            <div style="width: 10%;"></div>
            <div
              class="heading-section ftco-animate service-text"
              style="display: flex; flex-direction: column; justify-content: center; align-items: center; text-align: center;"
            >
              <h2 class="mb-4">Weekly Mowing</h2>
              <p>
                Weekly mowing is key to keeping your lawn looking neat and well-maintained all
                season long. Our professional mowing services ensure your grass stays at the perfect
                height for a healthy, manicured appearance.
              </p>
              <p>
                <a href="/services/mowing.html" class="btn btn-primary py-3 px-4">Learn more</a>
              </p>
            </div>
          </div>
          <div
            class="service-item align-items-stretch"
            style="padding-top: 35px;"
            id="Fertilization and Weed Control"
          >
            <div
              class="heading-section ftco-animate service-text"
              style="display: flex; flex-direction: column; justify-content: center; align-items: center; text-align: center;"
            >
              <h2 class="mb-4">Fertilization and Weed Control</h2>
              <p>
                Fertilization and weed control are essential for a lush, green lawn free from
                unwanted growth. Our services provide the right nutrients while eliminating weeds to
                keep your yard looking pristine.
              </p>
              <p>
                <a
                  href="/services/fertilization-weed-control.html"
                  class="btn btn-primary py-3 px-4">Learn more</a
                >
              </p>
            </div>
            <div style="width: 10%;"></div>
            <div class="ftco-animate" style="width: 100%; height: 300px; overflow: hidden;">
              <img
                src="/assets/Fertilization_Service.png"
                alt="mowing"
                style="width: 100%; height: 100%; object-fit: cover; border-radius: 15px;"
              />
            </div>
          </div>
          <div
            class="d-flex align-items-stretch"
            style="padding-top: 35px;"
            id="Aeration and Seeding"
          >
            <div class="ftco-animate" style="width: 100%; height: 300px; overflow: hidden;">
              <img
                src="/assets/Aeration_Service.jpg"
                alt="mowing"
                style="width: 100%; height: 100%; object-fit: cover; border-radius: 15px;"
              />
            </div>
            <div style="width: 10%;"></div>
            <div
              class="heading-section ftco-animate service-text"
              style="display: flex; flex-direction: column; justify-content: center; align-items: center; text-align: center;"
            >
              <h2 class="mb-4">Aeration and Seeding</h2>
              <p>
                Aeration and seeding are key to revitalizing your lawn and promoting healthy growth.
                Our expert services help improve soil structure and ensure your grass gets the
                nutrients it needs to thrive.
              </p>
              <p>
                <a href="/services/aeration-seeding.html" class="btn btn-primary py-3 px-4"
                  >Learn more</a
                >
              </p>
            </div>
          </div>
          <div
            class="service-item align-items-stretch"
            style="padding-top: 35px;"
            id="Fall and Winter Clean Up"
          >
            <div
              class="heading-section ftco-animate service-text"
              style="display: flex; flex-direction: column; justify-content: center; align-items: center; text-align: center;"
            >
              <h2 class="mb-4">Fall and Winter Clean Up</h2>
              <p>
                Fall and winter clean-up is crucial for preparing your yard for the colder months.
                Our services remove leaves, debris, and dead plants, ensuring your landscape stays
                tidy and ready for spring
              </p>
              <p>
                <a href="/services/fall-winter-cleanup.html" class="btn btn-primary py-3 px-4"
                  >Learn more</a
                >
              </p>
            </div>
            <div style="width: 10%;"></div>
            <div class="ftco-animate" style="width: 100%; height: 300px; overflow: hidden;">
              <img
                src="/assets/FallCleanUp_Service.jpg"
                alt="mowing"
                style="width: 100%; height: 100%; object-fit: cover; border-radius: 15px;"
              />
            </div>
          </div>
          <div class="d-flex align-items-stretch" style="padding-top: 35px;" id="Mulching">
            <div class="ftco-animate" style="width: 100%; height: 300px; overflow: hidden;">
              <img
                src="/assets/Mulching_Service.jpg"
                alt="mowing"
                style="width: 100%; height: 100%; object-fit: cover; border-radius: 15px;"
              />
            </div>
            <div style="width: 10%;"></div>
            <div
              class="heading-section ftco-animate service-text"
              style="display: flex; flex-direction: column; justify-content: center; align-items: center; text-align: center;"
            >
              <h2 class="mb-4">Mulching</h2>
              <p>
                Mulching is essential for maintaining healthy soil and vibrant plants in your
                garden. Our mulching services help retain moisture, reduce weeds, and provide your
                landscape with a polished, finished look.
              </p>
              <p>
                <a href="/services/mulching.html" class="btn btn-primary py-3 px-4">Learn more</a>
              </p>
            </div>
          </div>
          <div class="service-item align-items-stretch" style="padding-top: 35px;" id="Hardscaping">
            <div
              class="heading-section ftco-animate service-text"
              style="display: flex; flex-direction: column; justify-content: center; align-items: center; text-align: center;"
            >
              <h2 class="mb-4">Bed Maintenance</h2>
              <p>
                A well-maintained flower bed can be the highlight of your garden, but it needs
                constant care to flourish. We provide expert flower bed maintenance to keep your
                flowers blooming beautifully all season long.
              </p>
              <p>
                <a href="/services/bed-maintenance.html" class="btn btn-primary py-3 px-4"
                  >Learn more</a>
              </p>
            </div>

            <div style="width: 10%;"></div>
            <div class="ftco-animate" style="width: 100%; height: 300px; overflow: hidden;">
              <img
                src="/assets/Bed_Service.jpg"
                alt="mowing"
                style="width: 100%; height: 100%; object-fit: cover; border-radius: 15px;"
              />
            </div>
          </div>
          <div class="d-flex align-items-stretch" style="padding-top: 35px;" id="Landscaping">
            <div class="ftco-animate" style="width: 100%; height: 300px; overflow: hidden;">
              <img
                src="/assets/ShrubCare_Service.jpg"
                alt="mowing"
                style="width: 100%; height: 100%; object-fit: cover; border-radius: 15px;"
              />
            </div>
            <div style="width: 10%;"></div>
            <div
              class="heading-section ftco-animate service-text"
              style="display: flex; flex-direction: column; justify-content: center; align-items: center; text-align: center;"
            >
              <h2 class="mb-4">Tree and Shrub Care</h2>
              <p>
                Keeping your trees and shrubs healthy is essential to maintaining a vibrant
                landscape. Our expert care services help protect them from disease and pests,
                ensuring they thrive throughout the seasons.
              </p>
              <p>
                <a href="/services/tree-shrub-care.html" class="btn btn-primary py-3 px-4"
                  >Learn more</a>
              </p>
            </div>
          </div>
          <div
            class="service-item align-items-stretch"
            style="padding-top: 35px;"
            id="Bed Maintenance"
          >
            <div
              class="heading-section ftco-animate service-text"
              style="display: flex; flex-direction: column; justify-content: center; align-items: center; text-align: center;"
            >
              <h2 class="mb-4">Hardscaping</h2>
              <p>
                A beautifully designed yard starts with solid structure. Our expert hardscaping
                services bring lasting style and function to your outdoor space from elegant stone
                pathways to durable retaining walls so your landscape stays stunning year-round with
                less upkeep.
              </p>
              <p>
                <a href="/services/hardscaping.html" class="btn btn-primary py-3 px-4"
                  >Learn more</a>
              </p>
            </div>

            <div style="width: 10%;"></div>
            <div class="ftco-animate" style="width: 100%; height: 300px; overflow: hidden;">
              <img
                src="/assets/Landscaping_Service.jpg"
                alt="mowing"
                style="width: 100%; height: 100%; object-fit: cover; border-radius: 15px;"
              />
            </div>
          </div>
          <div
            class="d-flex align-items-stretch"
            style="padding-top: 35px;"
            id="Tree and Shrub Care"
          >
            <div class="ftco-animate" style="width: 100%; height: 300px; overflow: hidden;">
              <img
                src="/assets/Landscape_Design_Service.jpg"
                alt="mowing"
                style="width: 100%; height: 100%; object-fit: cover; border-radius: 15px;"
              />
            </div>
            <div style="width: 10%;"></div>
            <div
              class="heading-section ftco-animate service-text"
              style="display: flex; flex-direction: column; justify-content: center; align-items: center; text-align: center;"
            >
              <h2 class="mb-4">Landscape Design</h2>
              <p>
                A great yard doesn't happen by accident it's designed. Our professional landscape
                design services transform your outdoor space with thoughtful layouts, plant
                selections, and features that reflect your style and enhance your home's curb
                appeal, season after season.
              </p>
              <p>
                <a href="/services/landscaping.html" class="btn btn-primary py-3 px-4"
                  >Learn more</a>
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <Footer />

  <!-- loader -->
  <div id="ftco-loader" class="show fullscreen">
    <svg class="circular" width="48px" height="48px"
      ><circle class="path-bg" cx="24" cy="24" r="22" fill="none" stroke-width="4" stroke="#eeeeee"
      ></circle><circle
        class="path"
        cx="24"
        cy="24"
        r="22"
        fill="none"
        stroke-width="4"
        stroke-miterlimit="10"
        stroke="#F96D00"></circle></svg
    >
  </div>

  <script src="/js/jquery.min.js" is:inline></script>
  <script src="/js/jquery-migrate-3.0.1.min.js" is:inline></script>
  <script src="/js/popper.min.js" is:inline></script>
  <script src="/js/bootstrap.min.js" is:inline></script>
  <script src="/js/jquery.easing.1.3.js" is:inline></script>
  <script src="/js/jquery.waypoints.min.js" is:inline></script>
  <script src="/js/jquery.stellar.min.js" is:inline></script>
  <script src="/js/owl.carousel.min.js" is:inline></script>
  <script src="/js/jquery.magnific-popup.min.js" is:inline></script>
  <script src="/js/scrollax.min.js" is:inline></script>
  <script
    src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBVWaKrjvy3MaE7SQ74_uJiULgl1JY0H2s&sensor=false"
  ></script>
  <script src="/js/google-map.js" is:inline></script>
  <script src="/js/main.js" is:inline></script>

  <!-- Global site tag (gtag.js) - Google Analytics -->
  <script async src="https://www.googletagmanager.com/gtag/js?id=UA-23581568-13"></script>
  <script>
    (window as any).dataLayer = (window as any).dataLayer || [];
    function gtag(...args: any[]) {
      ((window as any).dataLayer as any[]).push(args);
    }
    gtag("js", new Date());

    gtag("config", "UA-23581568-13");
  </script>
</body>
