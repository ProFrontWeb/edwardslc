---
import Footer from "../components/Footer.astro";
import Navigation from "../components/Navigation.astro";
import TopBar from "../components/TopBar.astro";

const pageTitle =
  "Our Services | Edwards Landscape Group - Lawn Care & Landscaping in Lynchburg, VA";
---

<head>
  <!-- Google tag (gtag.js) -->
  <script async src="https://www.googletagmanager.com/gtag/js?id=G-3TXVE0LR1X"></script>
  <script>
    (window as any).dataLayer = (window as any).dataLayer || [];
    (window as any).gtag = function () {
      (window as any).dataLayer.push(arguments);
    };
    (window as any).gtag("js", new Date());
    (window as any).gtag("config", "G-3TXVE0LR1X");
  </script>
  <title>{pageTitle}</title>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
  <meta
    name="description"
    content="Discover professional lawn care and landscaping services from Edwards Landscape Group. We offer mowing, mulching, aeration, fertilization, cleanups, and more for homes and businesses in Lynchburg and surrounding areas. Get a quote today!"
  />

  <link id="favicon" rel="icon" type="image/png" href="/assets/favicon.ico" />

  <link
    href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap"
    rel="stylesheet"
  />
  <link
    href="https://fonts.googleapis.com/css?family=Poppins:300,400,500,600,700,800,900"
    rel="stylesheet"
  />
  <link
    rel="stylesheet"
    href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css"
  />

  <link rel="stylesheet" href="/css/animate.css" />

  <link rel="stylesheet" href="/css/owl.carousel.min.css" />
  <link rel="stylesheet" href="/css/owl.theme.default.min.css" />
  <link rel="stylesheet" href="/css/magnific-popup.css" />

  <link rel="stylesheet" href="/css/ionicons.min.css" />

  <link rel="stylesheet" href="/css/flaticon.css" />
  <link rel="stylesheet" href="/css/icomoon.css" />
  <link rel="stylesheet" href="/css/style.css" />
</head>
<body>
  <TopBar />

  <Navigation />
  <section class="page-hero" style="background-image: url('/assets/bg_3.jpg');">
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-xl-6 hero-content-block">
          <h1 class="mb-3">Everything your lawn and landscape need</h1>
          <p class="mb-4">
            From routine mowing to full landscape design, we tailor maintenance and enhancements to
            fit your property, schedule, and budget.
          </p>
        </div>
      </div>
    </div>
  </section>

  <section class="ftco-section ftco-no-pt" id="services-list">
    <div class="container" style="max-width: 2000px;">
      <div class="row" style="justify-content: center; text-align: center;">
        <div class="col-lg-9 services-wrap px-4 pt-5">
          <h2 class="mb-4" style="font-weight: 700;">Explore our services</h2>
          <div class="service-item-row" id="Weekly Mowing">
            <div class="ftco-animate service-image-frame">
              <img
                src="/assets/Mowing_Service.jpg"
                alt="Weekly mowing service keeping turf neat and striped"
              />
            </div>
            <div class="heading-section ftco-animate service-text">
              <h2 class="mb-4">Weekly Mowing</h2>
              <p>
                Weekly mowing keeps your lawn even, healthy, and consistently sharp. We follow a
                routine that matches growth patterns and property layout so your turf stays lush and
                evenly cut.
              </p>
              <ul class="service-detail-list">
                <li><strong>What it is:</strong> Scheduled mowing with clean edging and tidy trim work.</li>
                <li><strong>What we provide:</strong> Stripe patterns, debris blow-off, and height adjustments.</li>
                <li>
                  <strong>What it brings:</strong> A polished, curb-appeal lawn that looks great all week.
                </li>
              </ul>
              <p>
                <a href="/services/mowing.html" class="btn btn-primary py-3 px-4">Learn more</a>
              </p>
            </div>
          </div>
          <div
            class="service-item-row service-item align-items-stretch"
            id="Fertilization and Weed Control"
          >
            <div class="heading-section ftco-animate service-text">
              <h2 class="mb-4">Fertilization and Weed Control</h2>
              <p>
                Build a thicker, greener lawn with targeted nutrients and weed suppression. We
                balance growth, color, and root strength while reducing invasive weeds.
              </p>
              <ul class="service-detail-list">
                <li><strong>What it is:</strong> A seasonal program of feedings and weed control.</li>
                <li>
                  <strong>What we provide:</strong> Fertilizer blends, spot treatments, and turf health checks.
                </li>
                <li>
                  <strong>What it brings:</strong> Denser turf, fewer weeds, and a more vibrant lawn.
                </li>
              </ul>
              <p>
                <a
                  href="/services/fertilization-weed-control.html"
                  class="btn btn-primary py-3 px-4">Learn more</a
                >
              </p>
            </div>
            <div class="ftco-animate service-image-frame">
              <img
                src="/assets/Fertilization_Service.png"
                alt="Fertilization treatment applied to a healthy lawn"
              />
            </div>
          </div>
          <div
            class="service-item-row"
            id="Aeration and Seeding"
          >
            <div class="ftco-animate service-image-frame">
              <img
                src="/assets/Aeration_Service.jpg"
                alt="Lawn aeration and seeding to restore turf"
              />
            </div>
            <div class="heading-section ftco-animate service-text">
              <h2 class="mb-4">Aeration and Seeding</h2>
              <p>
                Aeration opens compacted soil and seeding fills in thin turf for a stronger lawn
                season. It is the best way to restore density and improve water absorption.
              </p>
              <ul class="service-detail-list">
                <li><strong>What it is:</strong> Core aeration paired with overseeding in peak seasons.</li>
                <li>
                  <strong>What we provide:</strong> Seed selection, soil prep, and tailored watering guidance.
                </li>
                <li>
                  <strong>What it brings:</strong> Thicker grass, healthier roots, and better drought tolerance.
                </li>
              </ul>
              <p>
                <a href="/services/aeration-seeding.html" class="btn btn-primary py-3 px-4"
                  >Learn more</a
                >
              </p>
            </div>
          </div>
          <div
            class="service-item-row service-item align-items-stretch"
            id="Fall and Winter Clean Up"
          >
            <div class="heading-section ftco-animate service-text">
              <h2 class="mb-4">Fall and Winter Clean Up</h2>
              <p>
                Keep your property clean and ready for spring by removing leaves, sticks, and
                seasonal debris. We clear beds and turf so your landscape can rest and rebound.
              </p>
              <ul class="service-detail-list">
                <li><strong>What it is:</strong> Seasonal cleanup of beds, lawns, and landscaped areas.</li>
                <li>
                  <strong>What we provide:</strong> Leaf removal, pruning touch-ups, and haul-away service.
                </li>
                <li>
                  <strong>What it brings:</strong> A tidy winter landscape and easier spring start-up.
                </li>
              </ul>
              <p>
                <a href="/services/fall-winter-cleanup.html" class="btn btn-primary py-3 px-4"
                  >Learn more</a
                >
              </p>
            </div>
            <div class="ftco-animate service-image-frame">
              <img
                src="/assets/FallCleanUp_Service.jpg"
                alt="Fall cleanup with leaf removal and tidy beds"
              />
            </div>
          </div>
          <div class="service-item-row" id="Mulching">
            <div class="ftco-animate service-image-frame">
              <img
                src="/assets/Mulching_Service.jpg"
                alt="Fresh mulch installation around plantings"
              />
            </div>
            <div class="heading-section ftco-animate service-text">
              <h2 class="mb-4">Mulching</h2>
              <p>
                Mulch refreshes beds, protects roots, and helps your plantings thrive. We install
                clean, even layers that hold moisture and keep weeds down.
              </p>
              <ul class="service-detail-list">
                <li><strong>What it is:</strong> Seasonal mulch installation around beds and trees.</li>
                <li>
                  <strong>What we provide:</strong> Bed prep, edging definition, and mulch depth control.
                </li>
                <li>
                  <strong>What it brings:</strong> Healthier soil, fewer weeds, and a crisp finished look.
                </li>
              </ul>
              <p>
                <a href="/services/mulching.html" class="btn btn-primary py-3 px-4">Learn more</a>
              </p>
            </div>
          </div>
          <div class="service-item-row service-item align-items-stretch" id="Hardscaping">
            <div class="heading-section ftco-animate service-text">
              <h2 class="mb-4">Bed Maintenance</h2>
              <p>
                Keep your flower beds vibrant with regular weeding, edging, and seasonal touch-ups.
                We preserve plant health while keeping your beds picture-ready.
              </p>
              <ul class="service-detail-list">
                <li><strong>What it is:</strong> Ongoing care to keep beds clean and healthy.</li>
                <li>
                  <strong>What we provide:</strong> Weed control, trimming, and debris removal.
                </li>
                <li>
                  <strong>What it brings:</strong> Blooming beds and polished landscape detail.
                </li>
              </ul>
              <p>
                <a href="/services/bed-maintenance.html" class="btn btn-primary py-3 px-4"
                  >Learn more</a>
              </p>
            </div>

            <div class="ftco-animate service-image-frame">
              <img
                src="/assets/Bed_Service.jpg"
                alt="Maintained flower beds with fresh edging"
              />
            </div>
          </div>
          <div class="service-item-row" id="Landscaping">
            <div class="ftco-animate service-image-frame">
              <img
                src="/assets/ShrubCare_Service.jpg"
                alt="Tree and shrub care for a healthy landscape"
              />
            </div>
            <div class="heading-section ftco-animate service-text">
              <h2 class="mb-4">Tree and Shrub Care</h2>
              <p>
                Protect the health and shape of your trees and shrubs with expert pruning and care.
                We focus on growth, structure, and long-term vitality.
              </p>
              <ul class="service-detail-list">
                <li><strong>What it is:</strong> Pruning, shaping, and plant health maintenance.</li>
                <li>
                  <strong>What we provide:</strong> Seasonal trims, cleanup, and recommendations for care.
                </li>
                <li>
                  <strong>What it brings:</strong> Stronger plants, cleaner lines, and a balanced landscape.
                </li>
              </ul>
              <p>
                <a href="/services/tree-shrub-care.html" class="btn btn-primary py-3 px-4"
                  >Learn more</a>
              </p>
            </div>
          </div>
          <div
            class="service-item-row service-item align-items-stretch"
            id="Bed Maintenance"
          >
            <div class="heading-section ftco-animate service-text">
              <h2 class="mb-4">Hardscaping</h2>
              <p>
                Add structure and usability to your yard with hardscape features built to last. We
                craft patios, walkways, and retaining walls that elevate your outdoor living space.
              </p>
              <ul class="service-detail-list">
                <li><strong>What it is:</strong> Permanent outdoor features like patios, paths, and walls.</li>
                <li>
                  <strong>What we provide:</strong> Design guidance, quality materials, and precise installation.
                </li>
                <li>
                  <strong>What it brings:</strong> Outdoor spaces that are functional, durable, and beautiful.
                </li>
              </ul>
              <p>
                <a href="/services/hardscaping.html" class="btn btn-primary py-3 px-4"
                  >Learn more</a>
              </p>
            </div>

            <div class="ftco-animate service-image-frame">
              <img
                src="/assets/Landscaping_Service.jpg"
                alt="Hardscaping with stone patio and landscaping"
              />
            </div>
          </div>
          <div
            class="service-item-row"
            id="Tree and Shrub Care"
          >
            <div class="ftco-animate service-image-frame">
              <img
                src="/assets/Landscape_Design_Service.jpg"
                alt="Landscape design concept with lush plantings"
              />
            </div>
            <div class="heading-section ftco-animate service-text">
              <h2 class="mb-4">Landscape Design</h2>
              <p>
                Turn your vision into a cohesive outdoor plan with thoughtful design and plant
                selection. We design spaces that blend beauty, function, and long-term growth.
              </p>
              <ul class="service-detail-list">
                <li><strong>What it is:</strong> Custom planning for plants, beds, and outdoor features.</li>
                <li>
                  <strong>What we provide:</strong> Layouts, plant recommendations, and phased installation plans.
                </li>
                <li>
                  <strong>What it brings:</strong> A tailored landscape that boosts curb appeal year-round.
                </li>
              </ul>
              <p>
                <a href="/services/landscaping.html" class="btn btn-primary py-3 px-4"
                  >Learn more</a>
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <Footer />

  <!-- loader -->
  <div id="ftco-loader" class="show fullscreen">
    <svg class="circular" width="48px" height="48px"
      ><circle class="path-bg" cx="24" cy="24" r="22" fill="none" stroke-width="4" stroke="#eeeeee"
      ></circle><circle
        class="path"
        cx="24"
        cy="24"
        r="22"
        fill="none"
        stroke-width="4"
        stroke-miterlimit="10"
        stroke="#F96D00"></circle></svg
    >
  </div>

  <script src="/js/jquery.min.js" is:inline></script>
  <script src="/js/jquery-migrate-3.0.1.min.js" is:inline></script>
  <script src="/js/popper.min.js" is:inline></script>
  <script src="/js/bootstrap.min.js" is:inline></script>
  <script src="/js/jquery.easing.1.3.js" is:inline></script>
  <script src="/js/jquery.waypoints.min.js" is:inline></script>
  <script src="/js/jquery.stellar.min.js" is:inline></script>
  <script src="/js/owl.carousel.min.js" is:inline></script>
  <script src="/js/jquery.magnific-popup.min.js" is:inline></script>
  <script src="/js/scrollax.min.js" is:inline></script>
  <script
    src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBVWaKrjvy3MaE7SQ74_uJiULgl1JY0H2s&sensor=false"
  ></script>
  <script src="/js/google-map.js" is:inline></script>
  <script src="/js/main.js" is:inline></script>

  <!-- Global site tag (gtag.js) - Google Analytics -->
  <script async src="https://www.googletagmanager.com/gtag/js?id=UA-23581568-13"></script>
  <script>
    (window as any).dataLayer = (window as any).dataLayer || [];
    function gtag(...args: any[]) {
      ((window as any).dataLayer as any[]).push(args);
    }
    gtag("js", new Date());

    gtag("config", "UA-23581568-13");
  </script>
</body>
