---
import Footer from "../components/Footer.astro";
import Navigation from "../components/Navigation.astro";
import TopBar from "../components/TopBar.astro";

const pageTitle = "Edwards Landscape Group | Lynchburg Lawn & Landscape Experts";
---

<head>
  <!-- Google tag (gtag.js) -->
  <script async src="https://www.googletagmanager.com/gtag/js?id=G-3TXVE0LR1X"></script>
  <!-- <script>
      window.dataLayer = window.dataLayer || [];
      function gtag() {
        dataLayer.push(arguments);
      }
      gtag('js', new Date());

      gtag('config', 'G-3TXVE0LR1X');
    </script> -->
  <title>{pageTitle}</title>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
  <meta
    name="description"
    content="Edwards Landscape Group delivers premium lawn care, landscaping, and outdoor maintenance across Lynchburg, Forest, Bedford, Amherst, Madison Heights, and Smith Mountain Lake."
  />
  <meta
    name="keywords"
    content="landscaping lynchburg va, lawn care lynchburg, mulching, mowing, aeration, seeding, landscape design"
  />
  <link id="favicon" rel="icon" type="image/png" href="/assets/favicon.ico" />
  <link
    href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap"
    rel="stylesheet"
  />
  <link
    href="https://fonts.googleapis.com/css?family=Poppins:300,400,500,600,700,800,900"
    rel="stylesheet"
  />
  <link
    rel="stylesheet"
    href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css"
  />

  <link rel="stylesheet" href="/css/animate.css" />

  <link rel="stylesheet" href="/css/owl.carousel.min.css" />
  <link rel="stylesheet" href="/css/owl.theme.default.min.css" />
  <link rel="stylesheet" href="/css/magnific-popup.css" />

  <link rel="stylesheet" href="/css/ionicons.min.css" />

  <link rel="stylesheet" href="/css/flaticon.css" />
  <link rel="stylesheet" href="/css/icomoon.css" />
  <link rel="stylesheet" href="/css/style.css" />
</head>
<body>
  <div class="top-bar">
    <div class="container d-flex align-items-center justify-content-between">
      <div class="top-bar__contact">
        <span class="top-bar__label">Call</span>
        <a href="tel:14349422455">(434) 942-2455</a>
        <span class="divider">|</span>
        <a href="mailto:Will@edwardscapes.com">Will@edwardscapes.com</a>
      </div>
      <a class="top-bar__cta" href="contact.html">Get a quote today</a>
    </div>
  </div>

  <Navigation />
  <main>
    <section
      class="home-hero"
      style="background-image: url('/assets/Landscaping_Service.jpg'); min-height: 600px;"
      aria-label="Edwards Landscape Group hero"
    >
      <div class="hero-media" aria-hidden="true">
        <video
          class="bg-video"
          autoplay
          muted
          playsinline
          loop
          poster='\"/assets/Landscaping_Service.jpg"'
        >
          <source src="videos/Edwardscapes_compressed.webm" type="video/webm" />
          <source src="videos/Edwardscapes_compressed.mp4" type="video/mp4" />
        </video>
      </div>
      <div class="container">
        <div class="row align-items-center">
          <div class="col-lg-7 col-xl-6 hero-content-block">
            <h1>Professional Lawn Care & Landscaping in Lynchburg You Can Rely On</h1>
            <p class="mb-4">
              Healthy lawns start with expert care. From weekly mowing and fertilization to
              aeration, landscaping, and hardscaping, we keep your property looking its best all
              year long.
            </p>
            <div class="hero-actions d-flex flex-wrap">
              <a href="contact.html" class="btn btn-primary">Get a custom quote</a>
              <a href="services.html" class="btn btn-outline-light">See all services</a>
            </div>
          </div>
        </div>
      </div>
    </section>

    <section class="section-padding services-grid" aria-labelledby="services-heading">
      <div class="container">
        <div class="section-header text-center">
          <p class="eyebrow">What we do</p>
          <h2 id="services-heading">Lawn &amp; landscape services built for results</h2>
          <p class="section-lead">
            Your property gets a dedicated, detail-oriented crew focused on curb appeal and
            long-term plant health.
          </p>
        </div>
        <div class="row">
          <div class="col-md-4 d-flex">
            <a href="mowing.html" class="service-card-link">
              <article class="service-card">
                <div class="icon-wrapper">
                  <span class="flaticon-lawn-mower" aria-hidden="true"></span>
                </div>
                <h3>Weekly mowing</h3>
                <p>
                  Crisp lines, consistent schedules, and lawn treatments that keep grass thick,
                  green, and healthy all season long.
                </p>
                <span class="arrow-link">Mowing program</span>
              </article>
            </a>
          </div>
          <div class="col-md-4 d-flex">
            <a href="fall-winter-cleanup.html" class="service-card-link">
              <article class="service-card">
                <div class="icon-wrapper">
                  <span class="flaticon-fence" aria-hidden="true"></span>
                </div>
                <h3>Seasonal cleanups</h3>
                <p>
                  Leaf removal, pruning, and mulch refreshes that prepare your beds for healthy
                  growth and picture-perfect curb appeal.
                </p>
                <span class="arrow-link">Seasonal services</span>
              </article>
            </a>
          </div>
          <div class="col-md-4 d-flex">
            <a href="tree-shrub-care.html" class="service-card-link">
              <article class="service-card">
                <div class="icon-wrapper">
                  <span class="flaticon-natural-resources" aria-hidden="true"></span>
                </div>
                <h3>Plant health care</h3>
                <p>
                  Bed maintenance, tree and shrub care, and proactive treatments that protect your
                  investment and keep landscapes lush.
                </p>
                <span class="arrow-link">Plant services</span>
              </article>
            </a>
          </div>
        </div>
      </div>
    </section>

    <section class="section-padding highlight-band" aria-labelledby="why-heading">
      <div class="container">
        <div class="row align-items-center">
          <div class="col-lg-6">
            <h2 id="why-heading">Why homeowners choose Edwards</h2>
            <ul class="checklist">
              <li>Dedicated crews that arrive on time and respect your property.</li>
              <li>Holistic lawn, plant, and landscape plans tailored to your goals.</li>
              <li>
                Local expertise for Lynchburg, Forest, Bedford, Amherst, Madison Heights, and Smith
                Mountain Lake.
              </li>
              <li>Transparent communication with clear estimates and proactive updates.</li>
            </ul>
          </div>
          <div class="col-lg-5 ml-lg-auto">
            <div class="feature-card">
              <p class="eyebrow">Service spotlight</p>
              <h3>Fertilization &amp; weed control</h3>
              <p>
                Our licensed technicians build a season-long plan with soil-first treatments,
                targeted weed control, and aeration to maximize root strength.
              </p>
              <ul class="bullet-list">
                <li>Custom treatment schedule for your turf type</li>
                <li>Eco-conscious applications focused on long-term health</li>
                <li>Detailed visit notes after every appointment</li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </section>

    <section class="section-padding" aria-labelledby="area-heading">
      <div class="container">
        <div class="row align-items-center">
          <div class="col-md-6">
            <div class="section-header">
              <p class="eyebrow">Service area</p>
              <h2 id="area-heading">Proudly serving Central Virginia</h2>
              <p>
                We care for properties across Lynchburg, Forest, Bedford, Amherst, Madison Heights,
                and Smith Mountain Lake. Not sure if we work in your neighborhood? Reach out and
                we'll confirm availability.
              </p>
            </div>
            <div class="pill-list">
              <span class="pill">Lynchburg</span>
              <span class="pill">Forest</span>
              <span class="pill">Bedford</span>
              <span class="pill">Amherst</span>
              <span class="pill">Madison Heights</span>
              <span class="pill">Smith Mountain Lake</span>
            </div>
          </div>
          <div class="col-md-5 ml-md-auto">
            <div class="cta-card" aria-label="Request a quote">
              <p class="eyebrow">Ready to start?</p>
              <h3>Request your custom quote</h3>
              <p>
                Tell us about your property and we'll build a tailored plan that keeps your
                landscape healthy year-round.
              </p>
              <a href="contact.html" class="btn btn-primary btn-block">Get my quote</a>
              <p class="small mb-0 mt-3">Fast responses. Clear pricing. No pressure.</p>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer />

  <!-- loader -->
  <div id="ftco-loader" class="show fullscreen">
    <svg class="circular" width="48px" height="48px"
      ><circle class="path-bg" cx="24" cy="24" r="22" fill="none" stroke-width="4" stroke="#eeeeee"
      ></circle><circle
        class="path"
        cx="24"
        cy="24"
        r="22"
        fill="none"
        stroke-width="4"
        stroke-miterlimit="10"
        stroke="#F96D00"></circle></svg
    >
  </div>

  <script src="/js/jquery.min.js" is:inline></script>
  <script src="/js/jquery-migrate-3.0.1.min.js" is:inline></script>
  <script src="/js/popper.min.js" is:inline></script>
  <script src="/js/bootstrap.min.js" is:inline></script>
  <script src="/js/jquery.easing.1.3.js" is:inline></script>
  <script src="/js/jquery.waypoints.min.js" is:inline></script>
  <script src="/js/jquery.stellar.min.js" is:inline></script>
  <script src="/js/owl.carousel.min.js" is:inline></script>
  <script src="/js/jquery.magnific-popup.min.js" is:inline></script>
  <script src="/js/scrollax.min.js" is:inline></script>
  <script
    src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBVWaKrjvy3MaE7SQ74_uJiULgl1JY0H2s&sensor=false"
  ></script>
  <script src="/js/google-map.js" is:inline></script>
  <script src="/js/main.js" is:inline></script>

  <!-- Global site tag (gtag.js) - Google Analytics -->
  <script async src="https://www.googletagmanager.com/gtag/js?id=UA-23581568-13"></script>
  <!-- <script>
  window.dataLayer = window.dataLayer || [];
  function gtag(){dataLayer.push(arguments);}
  gtag('js', new Date());

  gtag('config', 'UA-23581568-13');
</script> -->
</body>
