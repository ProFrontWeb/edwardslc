---
import Footer from "../../components/Footer.astro";
import Navigation from "../../components/Navigation.astro";
import TopBar from "../../components/TopBar.astro";

const pageTitle = "Landscaping | Edwards Landscape Group";
---

<head>
  <!-- Google tag (gtag.js) -->
