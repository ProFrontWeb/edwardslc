import Footer from "../../components/Footer.astro";
import Navigation from "../../components/Navigation.astro";
import TopBar from "../../components/TopBar.astro";
import RelatedServiceBlogs from "../../components/RelatedServiceBlogs.astro";

const pageTitle = "Lawn Mowing | Edwards Landscape Group";
---

<head>
  <!-- Google tag (gtag.js) -->
