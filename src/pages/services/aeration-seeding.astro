  <title>{pageTitle}</title>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
  <meta
    name="description"
    content="Improve root growth and thicken your lawn with aeration and seeding services in Lynchburg, VA."
  />
  <meta
    name="keywords"
    content="aeration lynchburg, overseeding service, lawn seeding, soil compaction relief"
  />
  <link id="favicon" rel="icon" type="image/png" href="/assets/favicon.ico" />
  <link
    href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap"
    rel="stylesheet"
  />
  <link
    href="https://fonts.googleapis.com/css?family=Poppins:300,400,500,600,700,800,900"
    rel="stylesheet"
  />
  <link
    rel="stylesheet"
    href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css"
  />
  <link rel="stylesheet" href="/css/animate.css" />
