---
import BaseLayout from '../layouts/BaseLayout.astro';
const page = {
  title: "Contact Edwards Landscape Group | Lynchburg Lawn Care & Landscaping",
  description: "Contact Edwards Landscape Group for professional lawn care and landscaping services in Lynchburg and surrounding areas. Request a quote, ask questions, or schedule your next service today."
};
---

<BaseLayout {...page}>
<section class="page-hero" style="background-image: url('images/bg_3.jpg');">
        <div class="container">
          <div class="row">
            <div class="col-lg-8 col-xl-6 hero-content-block">
              <div class="hero-kicker">Contact us</div>
              <h1 class="mb-3">Tell us about your lawn or landscape</h1>
              <p class="mb-4">Share what you need—routine mowing, seasonal cleanups, or a full redesign—and we’ll respond quickly with next steps.</p>
              <div class="hero-actions d-flex flex-wrap">
                <a href="#contact-section" class="btn btn-primary">Send a message</a>
                <a href="tel:14349422455" class="btn btn-outline-light">Call (434) 942-2455</a>
              </div>
            </div>
          </div>
        </div>
      </section>
   	
        <section class="ftco-section bg-light" id="contact-section">
		<div class="container">
			<div class="row justify-content-center">
				<div class="col-md-12">
					<div class="wrapper">
						<div class="row mb-5 justify-content-center">
							<div class="col-md-3">
								<div class="dbox w-100 text-center">
									<div class="icon d-flex align-items-center justify-content-center">
										<span class="fa fa-map-marker"></span>
									</div>
									<div class="text">
										<p>Lynchburg, Virginia</p>
									</div>
								</div>
							</div>
							<div class="col-md-3">
								<div class="dbox w-100 text-center">
									<div class="icon d-flex align-items-center justify-content-center">
										<span class="fa fa-paper-plane"></span>
									</div>
									<div class="text">
										<p>Will@edwardscapes.com</p>
									</div>
								</div>
							</div>
							<div class="col-md-3">
								<div class="dbox w-100 text-center">
									<div class="icon d-flex align-items-center justify-content-center">
										<span class="fa fa-phone"></span>
									</div>
									<div class="text">
										<p>(434) 942-2455</p>
									</div>
								</div>
							</div>
						<div class="row no-gutters">
							<div class="col-md-7">
								<div class="contact-wrap w-100 p-md-5 p-4">
									<h3 class="mb-4">Contact Us</h3>
									<div id="form-message-warning" class="mb-4"></div>
									<iframe name="dummyframe" id="dummyframe" style="display: none;"></iframe>
									<form action="https://api.web3forms.com/submit" method="POST" class="contactForm" id="form" target="dummyframe">
									<!-- <form method="POST" class="contactForm" id="form"> -->
										<input type="hidden" name="access_key" value="1d9f1ce3-a745-4654-a8bd-9215ae24a6d2">
										<!-- <input type="hidden" name="access_key" value="YOUR_ACCESS_KEY_HERE"> -->

										<div class="row">
											<div class="col-md-6">
												<div class="form-group">
													<label class="label" for="name">First Name</label>
													<input type="text" class="form-control" name="first name" id="first name" placeholder="First Name">
													<p id="firstNameErrorMessage" class="error" style="font-size: small; color: #ff0000; display: none;"></p>
												</div>
											</div>
											<div class="col-md-6">
												<div class="form-group">
													<label class="label" for="name">Last Name</label>
													<input type="text" class="form-control" name="last name" id="last name" placeholder="Last Name">
													<p id="lastNameErrorMessage" class="error" style="font-size: small; color: #ff0000; display: none;"></p>
												</div>
											</div>
											<div class="col-md-6"> 
												<div class="form-group">
													<label class="label" for="email">Email Address</label>
													<input type="email" class="form-control" name="email" id="email" placeholder="Email">
													<p id="emailErrorMessage" class="error" style="font-size: small; color: #ff0000; display: none;"></p>
												</div>
											</div>
											<div class="col-md-6">
												<div class="form-group">
													<label class="label" for="name">Phone Number</label>
													<input type="text" class="form-control" name="phone number" id="phone number" placeholder="Phone Number">
													<p id="phoneNumberErrorMessage" class="error" style="font-size: small; color: #ff0000; display: none;"></p>
												</div>
											</div>
											<div class="col-md-12">
												<div class="form-group">
													<label class="label" for="subject">Which service(s) are you interested in</label>
												</div>
											</div>
											<div class="col-md-6">
												<div class="form-group">
													<div>
														<input type="checkbox" id="Aeration and Seeding" name="Aeration and Seeding" value="Aeration and Seeding">
														<label for="Aeration and Seeding">Aeration and Seeding</label>
													</div>
													<div>
														<input type="checkbox" id="Bed Maintenance" name="Bed Maintenance" value="Bed Maintenance">
														<label for="Bed Maintenance">Bed Maintenance</label>
													</div>
													<div>
														<input type="checkbox" id="Fall and Winter Clean Up" name="Fall and Winter Clean Up" value="Fall and Winter Clean Up">
														<label for="Fall and Winter Clean Up">Fall and Winter Clean Up</label>
													</div>
													<div>
														<input type="checkbox" id="Fertilization and Weed Control" name="Fertilization and Weed Control" value="Fertilization and Weed Control">
														<label for="Fertilization and Weed Control">Fertilization and Weed Control</label>	
													</div>
												</div>
											</div>
											<div class="col-md-6">
												<div class=""form-group>
													<div>
														<input type="checkbox" id="Hardscaping" name="Hardscaping" value="Hardscaping">
														<label for="Hardscaping">Hardscaping</label>
													</div>
													<div>
														<input type="checkbox" id="Mulching" name="Mulching" value="Mulching">
														<label for="Mulching">Mulching</label>
													</div>
													<div>
														<input type="checkbox" id="Tree and Shrub Care" name="Tree and Shrub Care" value="Tree and Shrub Care">
														<label for="Tree and Shrub Care">Tree and Shrub Care</label>
													</div>
													<div>
														<input type="checkbox" id="Weekly Mowing" name="Weekly Mowing" value="Weekly Mowing">
														<label for="Weekly Mowing">Weekly Mowing</label>
													</div>
												</div>
											</div>
											<div class="col-md-12">
												<div class="form-group">
													<label class="label" for="#">Message</label>
													<textarea name="message" class="form-control" id="message" cols="30" rows="4" placeholder="Message"></textarea>
													<p id="messageErrorMessage" class="error" style="font-size: small; color: #ff0000; display: none;"></p>
												</div>
											</div>
											<div class="col-md-12">
												<div class="form-group">
													<input type="submit" value="Send Message" class="btn btn-primary">
													<div class="submitting" style="display: none;">
														Your message was sent, thank you!
													</div>
												</div>
											</div>
											<div class="h-captcha" data-captcha="true"></div>
											<!-- <input type="checkbox" name="botcheck" class="hidden" style="display: none;"> -->
										</div>
									</form>
								</div>
							</div>
								<div class="col-md-5 d-flex align-items-stretch">
									<div class="info-wrap w-100 p-5 img" style="background-image: url(images/work10.jpg);">
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>

    
    
    
</BaseLayout>
