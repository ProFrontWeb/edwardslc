    <!-- Global site tag (gtag.js) - Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=UA-23581568-13"></script>
    <script>
      (window as any).dataLayer = (window as any).dataLayer || [];
      function gtag(...args: any[]) {
        (window as any).dataLayer.push(args);
      }
      gtag("js", new Date());

      gtag("config", "UA-23581568-13");
    </script>
    <script is:inline>
      function validate(): boolean {
        const firstName = (document.getElementById("first name") as HTMLInputElement).value;
        const lastName = (document.getElementById("last name") as HTMLInputElement).value;
        const email = (document.getElementById("email") as HTMLInputElement).value;
        const phoneNumber = (document.getElementById("phone number") as HTMLInputElement).value;
        const address = (document.getElementById("address") as HTMLTextAreaElement).value;
        // jQuery selectors with the correct id syntax (use #)
        const firstNameErrorMessage = jQuery("#firstNameErrorMessage");
        const lastNameErrorMessage = jQuery("#lastNameErrorMessage");
        const emailErrorMessage = jQuery("#emailErrorMessage");
        const phoneNumberErrorMessage = jQuery("#phoneNumberErrorMessage");
        const addressErrorMessage = jQuery("#addressErrorMessage");

        // Reset all error messages first (hide and clear text)
        firstNameErrorMessage.hide().text("");
        lastNameErrorMessage.hide().text("");
        emailErrorMessage.hide().text("");
        phoneNumberErrorMessage.hide().text("");
        addressErrorMessage.hide().text("");

        // Validation checks
        if (firstName.length <= 0) {
          firstNameErrorMessage.text("First Name is required.").show();
          return false;
        }
        if (lastName.length <= 0) {
          lastNameErrorMessage.text("Last Name is required.").show();
          return false;
        }
        if (email.length <= 0) {
          emailErrorMessage.text("Email is required.").show();
          return false;
        }
        if (phoneNumber.length <= 0) {
          phoneNumberErrorMessage.text("Phone Number is required.").show();
          return false;
        }
        if (address.length <= 0) {
          addressErrorMessage.text("Address is required").show();
          return false;
        }
        return true;
      }
    </script>
    <script is:inline>
      jQuery(document).ready(function () {
        jQuery("form").submit(function (e: JQuery.SubmitEvent) {
          e.preventDefault(); // Prevent default form submission (no page reload)

          const form = jQuery(this);
          const formData = new FormData(this as HTMLFormElement);
          const submittingMessage = jQuery(".submitting");
          const validated = validate();

          if (validated) {
            // Make the AJAX request
            jQuery.ajax({
              url: form.attr("action"),
              method: form.attr("method"),
              data: formData,
              processData: false, // Do not process the data
              contentType: false, // Do not set content type
              success: function (_response: any) {
                submittingMessage.show(); // Show success message

                // Clear the form fields
                (form[0] as HTMLFormElement).reset();

                // Optionally, hide the submitting message after a few seconds
                setTimeout(function () {
                  submittingMessage.hide();
                }, 5000);
              },
              error: function () {
                submittingMessage
                  .text("Oops! Something went wrong. Please try again later.")
                  .show();
              },
            });
          }
        });
      });
    </script>
